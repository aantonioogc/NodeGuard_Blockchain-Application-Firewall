{
  "name": "blockchain-application-firewall",
  "version": "2.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json && npm run copy-lua",
    "copy-lua": "copyfiles -u 3 src/rateLimiting/lua-scripts/*.lua dist/rateLimiting/lua-scripts/",
    "start": "node dist/index.js",
    "lint": "echo \"No linter configured\"",
    "load:example": "ts-node scripts/gen-load.ts",
    "test": "jest --config=tests/jest.config.js",
    "test:unit": "jest --config=tests/jest.config.js tests/unit",
    "test:integration": "jest --config=tests/jest.config.js tests/integration",
    "test:e2e": "jest --config=tests/jest.config.js tests/e2e",
    "test:threats": "jest --config=tests/jest.config.js tests/threat-scenarios --testTimeout=60000",
    "test:blockchain": "jest --config=tests/jest.config.js tests/blockchain-integration --testTimeout=30000",
    "test:coverage": "jest --config=tests/jest.config.js --coverage",
    "test:comprehensive": "./tests/run-comprehensive-tests.sh",
    "test:security": "./tests/comprehensive-security/scripts/comprehensive-security-tests.sh",
    "test:quick": "./tests/scripts/quick-checks.sh"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "figlet": "^1.8.2",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "p-queue": "^8.1.0",
    "p-retry": "^7.0.0",
    "prom-client": "^14.2.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@types/chai": "^5.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "ethers": "^6.8.0",
    "hardhat": "^2.17.0",
    "jest": "^29.7.0",
    "mocha": "^11.7.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "web3": "^4.2.0"
  },
  "description": "Backend del TFG: un cortafuegos de aplicación para bloquear/permitir llamadas JSON-RPC a un nodo Ethereum según reglas estáticas y heurísticas.",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
